<h1>Create Contest</h1>

<%= form_for @contest do |f| %>
    <%= render 'shared/error_messages', object: @contest %>

    <div class="form-group">
	<%= f.label :deadline %>
	<%= f.datetime_select :deadline, {start_year: Time.now.year}, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :start %>
	<%= f.datetime_select :start, {start_year: Time.now.year}, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :contest_type %>
	<%= f.text_field :contest_type, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :referee_id, 'Referee' %>
	<%= f.collection_select(:referee_id, Referee.all, :id, :name, {}, class: 'form-control') %>
    </div>

    <%= f.submit 'Create Contest', class: 'btn btn-primary' %>
<% end %>
