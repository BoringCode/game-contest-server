<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <%= link_to 'Game Contest Server', root_path,
                class: 'navbar-brand' %>
        </div>
        <ul class="nav navbar-nav navbar-left">
            <%= active_link_to 'Home', root_path,
                       wrap_tag: :li, active: :exclusive %>
            <%= active_link_to 'Users', users_path,
                       wrap_tag: :li, active: :exclusive %>
            <%= active_link_to 'Contests', contests_path,
                       wrap_tag: :li, active: :exclusive %>
            <%= active_link_to 'Referees', referees_path,
                       wrap_tag: :li, active: :exclusive %>            
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <span class="caret" /></a>
                    <ul class="dropdown-menu">
                    <%= active_link_to 'Profile', current_user, wrap_tag: :li, active: :exclusive %>
                    <%= active_link_to 'Settings', edit_user_path(current_user),
                               wrap_tag: :li %>
                    <li class="divider"></li>
                    <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
                    </ul>
                </li>
            <% else %>
                <% unless current_page?(login_path) %>
                    <li><%= button_to 'Log In', login_path, method: :get, class: 'btn btn-info navbar-btn' %></li>
                <% end %>
                <% unless current_page?(signup_path) %>
                    <li><%= button_to 'Sign Up', signup_path, method: :get, class: 'btn btn-warning navbar-btn' %></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</nav>