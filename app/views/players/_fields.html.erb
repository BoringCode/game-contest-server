<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :playable, 'Allow others to compete against this player' %>
    <%= f.check_box :playable %>
</div>

<div class="form-group">
    <%= f.label :downloadable, 'Allow others to download this player' %>
    <%= f.check_box :downloadable %>
</div>

<div class="form-group">
    <%= f.label :upload, 'Upload file' %>
    <%= f.file_field :upload %>
</div>
